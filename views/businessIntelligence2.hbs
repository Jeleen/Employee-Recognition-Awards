        function drawChart() {
        var g = new Array();
        g.push([]);
        g[0][0] = "something";
	g[0][1] = "else";
	
        var da = {{{myJSON}}};
        for(var i = 1; i <= da.length; i ++){
       		g.push([]);
	        g[i][0] = da[i-1][0];
		g[i][1] = da[i-1][1];
        }
        var data = google.visualization.arrayToDataTable(g);
        var options = {
           title: '{{{searchtitle}}}'
        };
  
          var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  
          chart.draw(data, options);
      }
      </script>
