      <div class="container-fluid" >
        <div class="row">
         
          
          
          
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
	 {{#if admins}}
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
	   <div class="btn-toolbar mb-2 mb-md-0">
         <form method="get" action="/addAdmin" >
	      	  <button id="addAdmin" type="submit" name="addAdmin" value="+ Add" class="btn btn-sm btn-outline-secondary" >+ Add</button>
 	</form>
	 {{/if}}
	 {{#if users}}
	 <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
	              <div class="btn-toolbar mb-2 mb-md-0">
	        <form method="get" action="/addUser" >
		<button id="addUser" type="submit" name="addUser" value="+ Add" class="btn btn-sm btn-outline-secondary"/>+ Add </button></form>
	 {{/if}}
	 
	     </div>
            
	 </div>
	 <div class="table-responsive-sm">
	              {{#if admins}}
	               <table class="table table-sm">
	 	       <thead class="thead-light">
	                   <tr>
	                     <th>ID</th>
	                     <th>Name</th>
	                     <th>Email</th>
	                     <th>Last Login</th>
	                     <th>Login Attempts</th>
	                     <th>Created</th>
	                     <th>Action</th>
	                   </tr>
	                 </thead>
	                 <tbody>
	                 {{#each admins}}
	 		   <tr>
	 		     <form method="post" action="/editAdmins" >
	 		   <td>{{this.id}}<input type="hidden" name="id" id="id" value="{{this.id}}" ></td>
	 		   <td>{{this.name}}</td>
	 		   <td><input type="text" name="email" id="email" value="{{this.email}}" ></td>
	 		        <td>{{convertDate this.last_login}}</td>
	 		      <td>{{this.login_attempts}}</td>
	 		     <td>{{convertDate this.creation_time}}</td>
	 		      <td><input id="Save" type="submit" name="Save" value="Save" >
	 		    <input id="delete" type="submit" name="delete" value="delete" ></td>
	 		      </form>
	 		    </tr>
	                  {{/each}}
	                   {{/if}}
	                 </tbody>
	               </table>
	               
	 	{{#if users}}
	            <table class="table table-sm">
	 	   <thead class="thead-light">
	                   <tr>
	                     <th>ID</th>
	                     <th>Name</th>
	                     <th>Email</th>
	                     <th>Region</th>
	                     <th>Last Login</th>
	                     <th>Login Attempts</th>
	                     <th>Created</th>
	                     <th>Creator ID</th>
	                     <th>Action</th>
	 
	                   </tr>
	                 </thead>
	                 <tbody>
	                 {{#each users}}
	                   <tr>
	                   <form method="post" action="/editUsers" >
	  		   <td>{{this.id}}<input type="hidden" name="id" id="id" value="{{this.id}}"></td>
	 		   <td>{{this.name}}</td>
	                    <td><input type="text" name="email" id="email" placeholder="{{this.email}}" ></td>
	 		   <td>{{this.region}}</td>
	 		   <td>{{convertDate this.last_login}}</td>
	                    <td>{{this.login_attempts}}</td>
	                    <td>{{convertDate this.creation_time}}</td>
	                    <td>{{this.creator_id}}</td>
				<td><input id="save" type="submit" name="save" value="Save" >
	                     <input id="delete" type="submit" name="delete" value="delete" ></td>
	                   </tr></form>
	                  {{/each}}
	                   {{/if}}
	                 </tbody>
	               </table>
